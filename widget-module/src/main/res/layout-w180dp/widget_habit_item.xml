<?xml version="1.0" encoding="utf-8"?>
<!-- Compact habit item layout for smaller widgets -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="4dp"
    android:minHeight="36dp"
    android:background="@drawable/widget_item_background">

    <!-- Habit Name (compact) -->
    <TextView
        android:id="@+id/habit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        android:textSize="11sp"
        android:textColor="@color/widgetTextColor"
        android:maxLines="1"
        android:ellipsize="end"
        android:importantForAccessibility="yes"
        android:contentDescription="Habit name" />

    <!-- Completion Checkbox (compact) -->
    <CheckBox
        android:id="@+id/toggle_done"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="2dp"
        android:buttonTint="@color/widgetAccentColor"
        android:focusable="true"
        android:clickable="true"
        android:importantForAccessibility="yes"
        android:contentDescription="Mark habit as complete"
        android:padding="8dp" />

    <!-- Streak Display (compact) -->
    <TextView
        android:id="@+id/streak_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”¥0"
        android:textSize="9sp"
        android:textColor="@color/widgetStreakColor"
        android:minWidth="24dp"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="Current streak" />

    <!-- Hide icon in compact mode -->
    <ImageView
        android:id="@+id/habit_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
