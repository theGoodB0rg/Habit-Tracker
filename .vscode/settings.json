{
  // Make the integrated terminal more stable on some GPUs
  "terminal.integrated.gpuAcceleration": "off",
  // Avoid potential shell injection/hooks that can destabilize PS 5.1
  "terminal.integrated.shellIntegration.enabled": false,
  // Provide stable profiles and default to cmd (usually safest with adb pipes)
  "terminal.integrated.profiles.windows": {
    "Command Prompt": {
      "path": "C:/Windows/System32/cmd.exe"
    },
    "PowerShell (NoProfile)": {
      "source": "PowerShell",
      "args": ["-NoLogo", "-NoProfile"]
    },
    "PowerShell 7 (NoProfile)": {
  "path": "C:/Program Files/PowerShell/7/pwsh.exe",
      "args": ["-NoLogo", "-NoProfile"],
      "overrideName": true
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell 7 (NoProfile)",
  // Increase scrollback to keep context without huge memory spikes
  "terminal.integrated.scrollback": 50000,
  // Reduce terminal chrome noise
  "terminal.integrated.enableVisualBell": false,
  "accessibility.signals.terminalBell": "off"
}
